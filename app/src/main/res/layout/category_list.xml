<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_category_list_name"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_width="250dp"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Frutas y verduras"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp">


        </TextView>

        <LinearLayout
            android:gravity="right|center"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:background="@drawable/shape_boton_rounded"
                android:gravity="center_horizontal"
                android:id="@+id/textView_category_list_count_products"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:text="5"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
