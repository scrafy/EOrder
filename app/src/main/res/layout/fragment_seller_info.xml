<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgView_fragment_seller_seller_image"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:elevation="20dp"
                android:scaleType="fitCenter">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_fragment_seller_info_fields_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_seller_name"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_taxid"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_seller_taxid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_address"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"
                    android:singleLine="false"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_city"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_post_code"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"

                    android:focusable="false"
                    android:focusedByDefault="true"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_country"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_province"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_email"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_sector"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_erp"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_erp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="@string/seller_fragment_info_gln"
                    android:textColor="@color/primaryText"
                    android:textSize="15dp"></TextView>


                <EditText
                    android:id="@+id/editText_fragment_seller_info_gln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:editable="false"
                    android:focusable="false"
                    
                    android:textColor="@color/secondaryText"
                    android:textSize="15dp"

                    ></EditText>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
