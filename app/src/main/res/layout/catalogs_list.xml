<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_catalog_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        >


        <ImageView
            android:id="@+id/imgView_catalog_list_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"></ImageView>

        <LinearLayout
            android:id="@+id/linearLayout_catalog_list_info_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_products_list_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Durex"
                android:singleLine="false"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@color/primaryText"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/textView_catalogs_list_total_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:singleLine="false"
                android:text="10 Products"
                android:gravity="bottom|right"

                android:textColor="@color/secondaryText"
                android:textSize="13dp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
