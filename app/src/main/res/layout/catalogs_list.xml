<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_catalogs_list_catalog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Catalog 1"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <androidx.cardview.widget.CardView


        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView_catalog_list_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgView_catalog_list_img_product"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"></ImageView>

            <TextView
                android:id="@+id/textView_catalogs_list_total_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/catalog_fragment_number_of_products"
                android:textColor="@color/secondaryText"
                android:textStyle="bold"></TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
